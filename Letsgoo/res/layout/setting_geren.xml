<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical" >
    
    <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:background="#ffffff"
    >
    <ImageView
        android:id="@+id/fanhui_geren"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/setting_back" />
    <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:layout_centerInParent="true"
         android:textSize="20sp"
         android:textColor="#00A57D"
         android:text="个人信息" /> 
    </RelativeLayout>
    
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="20dp"
    >
    </LinearLayout>
    <!--  
    <FrameLayout 
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:background="#ffffff"
    >
    <com.lingdong.letsgoo.resource.CircleImageView
        android:id="@+id/setting_geren_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:border_width="3dp"
        app:border_color="@color/light"
        android:src="@drawable/geren_image" />   
     </FrameLayout>
     
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="25dp"
    >
    </LinearLayout>
    -->
    
    <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="#ffffff"
    >
    <TextView 
    style="@style/mystyles"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="昵称"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="20dp"
    />
    <EditText 
    android:layout_width="0dp"
    android:layout_height="0dp"
    />
    <EditText 
    style="@style/mystyles"
    android:id="@+id/setting_geren_name"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:hint="请输入昵称"
    android:background="@null"
    android:maxLength="10"
    android:singleLine="true"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="110dp"
    android:imeOptions="actionNext"
    />
    </RelativeLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    >
</LinearLayout>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/textView1"
        style="@style/mystyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:text="性别" />

    <TextView
        android:id="@+id/nan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="110dp"
        android:text="男"
        android:textColor="#00A57D"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/setting_boy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/nan"
        android:src="@drawable/first_boy" />

    <TextView
        android:id="@+id/nv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/setting_boy"
        android:layout_marginLeft="80dp"
        android:text="女"
        android:textColor="#00A57D"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/setting_girl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/nv"
        android:layout_marginLeft="5dp"
        android:src="@drawable/first_girl" />

</RelativeLayout>

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="25dp"
    >
</LinearLayout>

<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="#ffffff"
    >
<TextView 
    style="@style/mystyles"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="学校"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="20dp"
    />
<EditText
    android:id="@+id/setting_school"
    style="@style/mystyles"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@null"
    android:maxLength="16"
    android:hint="请输入学校"
    android:singleLine="true"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="110dp"
    android:imeOptions="actionNext"
    />
</RelativeLayout>

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    >
</LinearLayout>

<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="#ffffff"
    >
<TextView 
    style="@style/mystyles"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="专业"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="20dp"
    />
<EditText
    android:id="@+id/setting_major"
    style="@style/mystyles"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@null"
    android:maxLength="16"
    android:hint="请输入专业"
    android:singleLine="true"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="110dp"
    android:imeOptions="actionDone"
    />
</RelativeLayout>

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="25dp"
    >
</LinearLayout>

<FrameLayout 
    android:id="@+id/setting_sure"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="#00A57D"
    >
<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:textColor="#ffffff"
    android:text="确定"
    android:layout_gravity="center"
    />
</FrameLayout>

</LinearLayout>
