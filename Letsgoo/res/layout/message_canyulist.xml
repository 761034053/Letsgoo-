<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#ffffff">
    
        <ImageView 
            android:id="@+id/message_canyu_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/message_canyu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/message_canyu_image"
            android:layout_toRightOf="@id/message_canyu_image"
            android:text="曾经年少的我"
            android:textColor="#a08fc3"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/message_canyu_time"
            style="@style/mystyles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/message_canyu_image"
            android:layout_alignLeft="@id/message_canyu_name"
            android:text="10分钟前"
            android:textColor="#BEB4AA"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/message_canyu_content"
            style="@style/mystyles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/message_canyu_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/message_canyu_name"
            android:text="参与了你的活动"
            android:textColor="#646c78"
            android:textSize="16sp" />
       <TextView 
            android:background="#efefef"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"/>
                

</RelativeLayout>
