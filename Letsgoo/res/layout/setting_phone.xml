<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical" >
    
    <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:background="#ffffff"
    >
    <ImageView
        android:id="@+id/fanhui_phone"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/setting_back" />
    <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:layout_centerInParent="true"
         android:textSize="20sp"
         android:textColor="#00A57D"
         android:text="手机绑定与修改" /> 
    </RelativeLayout>
    
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="20dp"
    >
    </LinearLayout>
  
    <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="#ffffff"
    >
    <TextView 
    style="@style/mystyles"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="手机号码"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="20dp"
    />
    <EditText 
    android:layout_width="0dp"
    android:layout_height="0dp"
    />

    <EditText
        android:id="@+id/phone_number"
        style="@style/mystyles"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:singleLine="true"
        android:hint="请填写手机号码"
        android:inputType="number"
        android:maxLength="11"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="110dp" 
        android:imeOptions="actionDone"/>

    <TextView
    android:id="@+id/phone_post"
    android:layout_width="45dp"
    android:layout_height="30dp"
    android:background="@drawable/phonepost_before"
    android:textColor="@color/white"
    android:text="发送"
    android:textSize="16sp"
    android:gravity="center"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="30dp"
    />
    </RelativeLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    >
</LinearLayout>

<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="#ffffff"
    >
<TextView 
    style="@style/mystyles"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="验证码"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="20dp"
    />
    <EditText 
    style="@style/mystyles"
    android:id="@+id/phone_yanzheng"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@null"
    android:singleLine="true"
    android:hint="请填写短信验证码"
    android:inputType="number"
    android:maxLength="6"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="110dp"
    android:imeOptions="actionDone"
    />
</RelativeLayout>

<FrameLayout 
    android:id="@+id/setting_phonepost"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_marginTop="25dp"
    android:background="#00A57D"
    >
<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:textColor="#ffffff"
    android:text="提交"
    android:layout_gravity="center"
    />
</FrameLayout>
</LinearLayout>
